<div class = "containerRed">
  <h2>Entrar</h2>
  <h3> OlÃ¡, seja bem vindo novamente! </h3> <br />

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'E-mail',:class => "form-control" , :style => "height:45px;" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off" , placeholder: 'Senha',:class => "form-control" , :style => "height:45px;"%>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Entrar", :class => "btn btn-primary col-sm-12", :style => "height:45px;" %>
      </div>
    </form> <br />
  <% end %>
  <%= render "devise/shared/links" %>
</div> <br />

