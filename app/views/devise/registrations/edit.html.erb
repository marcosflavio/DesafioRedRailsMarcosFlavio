<div class = "containerRed">
  <h2>Edite sua conta.</h2> <br />
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,multipart: true }) do |f| %>
    <%= devise_error_messages! %>
    
    <form>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true , placeholder: 'E-mail',:class => "form-control" , :style => "height:45px;"%>
      </div>
  
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
  
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha',:class => "form-control" , :style => "height:45px;" %>
        <i>(Deixe em branco se não quiser mudar)</i><br />
        <% if @minimum_password_length %>
          <em>(Minímo de <%= @minimum_password_length %> caracteres) </em>
        <% end %>
      </div>
  
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: 'Confirme sua senha',:class => "form-control" , :style => "height:45px;" %>
      </div>

      <div class="form-group">
        <%= f.password_field :current_password, autocomplete: "off",placeholder: 'Digite sua senha atual',:class => "form-control" , :style => "height:45px;" %>
        <i>(Digite sua senha atual para confirmar as mudanças)</i><br />
      </div>

      <div class="form-group">
        <h4>Alterar imagem de perfil?</h4>
        <%= f.file_field :image, :style => "height:45px;"%>
      </div>
      <div class="actions">
        <%= f.submit "Atualizar" , :class => "btn btn-primary col-sm-12", :style => "height:45px;"%>
      </div>
  
    </form><br/>
  <% end %>
</div> <br />

<div class = "containerRed"> <br />
  <h2>Cancelar minha conta</h2>
  <%= button_to "Cancele minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza??" }, method: :delete , :class => "btn btn-danger col-sm-12", :style => "height:45px;"%>
  <%= link_to "Voltar", :back %>
</div>