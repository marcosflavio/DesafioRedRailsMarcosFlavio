<!-- Segunda row -->
<div class="row">
    
    <div class="col-xs-3">
      <div class="col-sm-12" style="margin-top: -150px;">
            <img src="/egg1.jpg" height="200px" width="200px" class="rounded-img">
      </div>
      <div class="col-sm-12">
        <h3 style="font-weight: bold;"><%= params[:id] %></h3>
        <p>
          Desafio RedRocket!
        </p>
      </div>
    </div>
    
    <div class="col-xs-6">
        
        <%= render '/utils/redweet_form' %><br/><br/><br/>    
        <%for @redweet in @redweets %>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            
            <div class="col-sm-1">
              <img src="/egg1.jpg" class="rounded-img" height="50px" width="50px"></img>
            </div>
            <div class="col-sm-11">
              <p class="post-title"><span class="post-owner"><a href="/user/<%= User.find(@redweet.user_id).username %>"><%= User.find(@redweet.user_id).username %></a></span> <span class="post-creation">- <%= @redweet.created_at.to_formatted_s(:short) %></span></p>
              <p class="post-content"><%= @redweet.content %></p>
            </div>
            
            <div class="col-sm-12">
              <p class="post-links">
                <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                <a href="">Ver conversa</a>
              </p>
            </div>
            
          </div>
        </div>
         <% end %>
         <div class="panel panel-default post-panel">
          <div class="panel-body row">
            <div class="col-sm-12">
            <center><img src="/redlogo.png" height="25px" width="25px"></img>
              <a href="#top"><p class="opacity: .7;"> <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
            </div>
          </div>
        </div>
         
        </div>
    
       
    
    <div class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-body">
             <p>Quem seguir</p>
          </div>
        </div>
    </div>
    
    <div class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-body">
             <h5 style="color: grey; font-size: 125%;">Assuntos do momento</h5>
              <a href="">#NaoAOLimiteDeInternet</a><br>
                <span style="color: grey;">40k Redweets</span><br><br>
              <a href="">#DesventurasEmSerie</a><br>
                <span style="color: grey;">13k Redweets</span><br><br>
              <a href="">#SeEuFosseDonoDoRedwitter</a><br>
                <span style="color: grey;">12k Redweets</span><br><br>
              <a href="">#NaSextaFeira13Eu</a><br>
                <span style="color: grey;">5k Redweets</span><br><br>
              <a href="">#RedRocketTeam</a><br>
                <span style="color: grey;">7k Redweets</span><br><br>
          </div>
        </div>
    </div>
    
</div>