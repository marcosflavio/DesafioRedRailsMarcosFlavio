<div class = "containerRed modal-body">
  <h4>Entrar</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'E-mail',:class => "form-control" , :style => "height:40px; width:200px;" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off" , placeholder: 'Senha',:class => "form-control" , :style => "height:40px; width:200px;"%>
      </div>

      <div class="actions">
        <%= f.submit "Entrar", :class => "btn btn-primary",  :style => "height:40px; width:200px;" %>
      </div>
    </form> <br />
  <% end %>
</div> <br />

